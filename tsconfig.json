{
  "include": ["src/**/*", "shims-vue.d.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": false,
    "lib": ["dom", "es5", "es2015.promise"],
    "sourceMap": true,
    "pretty": true
  }
}
